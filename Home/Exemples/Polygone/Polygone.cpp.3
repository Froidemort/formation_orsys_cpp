const Polygone& Polygone::operator=( const Polygone& p) {

//  cout << "(debug) appel de l'affectation" << endl ;

    if ( this != &p ) {

        int *tmp = new int [ p.NbCotes] ;
        if ( NbCotes) delete [] TabLongueurs ;
        TabLongueurs = tmp ;
        NbCotes = p.NbCotes ;
        for ( int i=0; i<NbCotes; i++)
            SetCote( i, p.TabLongueurs[ i]) ;
    }
    return *this ;
}

